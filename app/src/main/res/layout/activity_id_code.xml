<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.check_subscription.IDCode"
    android:orientation="vertical"
    android:background="@drawable/bg_login">


    <RelativeLayout
        android:background="#D5000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/bg_gradient_profile"
            android:paddingLeft="200dp"
            android:paddingRight="200dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher_foreground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:padding="10dp"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:visibility="visible"
                        android:elevation="2dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/relative_layout_email_login_back"
                        android:gravity="left|center"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <RelativeLayout
                            android:background="@drawable/bg_fab_accent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0dp"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_arrow_back" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="@string/insertIdCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:textSize="13sp"
                    android:layout_marginBottom="10dp"
                    android:lineSpacingExtra="3dp"
                    android:textColor="@color/white"
                    android:text="@string/insertIdCodeDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Login and signup-->
                <LinearLayout
                    android:id="@+id/linear_layout_id_code_activity"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/text_input_editor_text_activity_id_code"
                        android:textCursorDrawable="@drawable/color_cursor_white"
                        android:textColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:hint="@string/idCode"
                        android:textSize="27sp"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:background="@drawable/bg_season_tab"
                        android:layout_height="75dp"/>

                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_loading_subtitles_accent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_check"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />

                        <Button
                            android:id="@+id/envoyer"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:elevation="2dp"
                            android:textColor="@color/white"
                            android:text="@string/send"
                            android:background="@drawable/bg_email_btn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginEnd="40dp"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>